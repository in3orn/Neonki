{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'form/fields.html.twig' %}

<div class="form-register">
	{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
		
		<h2 class="form-signin-heading">{{ 'layout.register'|trans }}</h2>
		
	    {{ form_widget(form) }}
	    
	    <div>
	        <input class="btn btn-success btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
	    </div>
	    
	{{ form_end(form) }}

	<div class="row">
		<div class="col-xs-12">
			<a class="btn btn-primary btn-block lowered" href="{{ path('fos_user_security_login') }}">
				{{ 'layout.login'|trans }}
			</a>
		</div>
	</div>
</div>
