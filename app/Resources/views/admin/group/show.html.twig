{% extends 'admin/simple/show.html.twig' %}

{% set mainPath = 'admin_' ~ 'group' %}
{% set title = 'title.groups'|trans %}

{% block moreFields1 %}
	<div class="col-xs-12 col-md-2 col-lg-3 text-md-right"><b>{{ 'label.group.parent'|trans }}</b></div>
	<div class="col-xs-12 col-md-8 col-lg-6">
		{% if entry.parent != null %} 
			{{ entry.parent.name }}
		{% else %}
			-
		{% endif %}
	</div>
	<div class="col-xs-12"><hr></div>
	<div class="col-xs-12 col-md-2 col-lg-3 text-md-right"><b>{{ 'label.group.stage'|trans }}</b></div>
	<div class="col-xs-12 col-md-8 col-lg-6">{{ entry.stage.name }}</div>
	<div class="col-xs-12"><hr></div>
	<div class="col-xs-12 col-md-2 col-lg-3 text-md-right"><b>{{ 'label.group.content'|trans }}</b></div>
	<div class="col-xs-12 col-md-8 col-lg-6">{{ entry.content }}</div>
	<div class="col-xs-12"><hr></div>
{% endblock %}