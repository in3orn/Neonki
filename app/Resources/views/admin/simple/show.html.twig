{% extends 'admin/show.html.twig' %}

{% block mainFields1 %}
	<div class="row">
		<div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
			<h3>{{ entry.name }}</h3>
		</div>
	</div>
{% endblock %}
            
{% block actions %}
    <div class="btn-group col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
	    <a type="button" class="btn btn-warning" href="{{ path(mainPath ~ '_edit', { id: entry.id }) }}">
	    	<i class="fa fa-edit"></i>{{ 'action.edit'|trans }}
		</a>
		<a type="button" class="btn btn-primary" href="{{ path(mainPath, { id: entry.id }) }}">
	    	<i class="fa fa-close"></i>{{ 'action.back'|trans }}
		</a>
    </div>
{% endblock %}