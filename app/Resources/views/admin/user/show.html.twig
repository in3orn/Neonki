{% extends 'admin/simple/show.html.twig' %}

{% set mainPath = 'admin_' ~ 'user' %}
{% set title = 'title.users'|trans %}

{% block mainFields1 %}
	<div class="row">
		<div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
			<h3>{{ entry.username }}</h3>
		</div>
	</div>
{% endblock %}

{% block moreFields1 %}
	<div class="col-xs-12 col-md-2 col-lg-3 text-xs-right"><b>{{ 'label.user.group'|trans }}</b></div>
	<div class="col-xs-12 col-md-8 col-lg-6">
		{% if entry.group %}
			{{ entry.group.name}}
		{% endif %}
	</div>
	<div class="col-xs-12"><hr></div>
	
	<div class="col-xs-12 col-md-2 col-lg-3 text-xs-right"><b>{{ 'label.user.roles'|trans }}</b></div>
	<ul class="col-xs-12 col-md-8 col-lg-6">
		{% for item in entry.roles %}
			<li>{{ item }}</li>
		{% else %}
			No role assigned.
		{% endfor %}
	</ul>
	<div class="col-xs-12"><hr></div>
{% endblock %}