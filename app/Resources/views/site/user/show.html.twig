{% extends 'site/simple/show.html.twig' %}

{% set mainPath = 'site_' ~ 'user' %}
{% set title = 'title.user'|trans %}

{% block sidebarContent %}
{% endblock %}

{% block mainFields1 %}
	<div class="row">
		<div class="col-xs-12">
			<h2>{{ 'label.welcome'|trans }} <strong>{{ entry.username }}</strong></h2>
		</div>
	</div>
{% endblock %}

{% block moreFields1 %}
<div class="row">
	<div class="col-sm-4">
		<p class="text-sm-right show-label">{{ 'label.name'|trans }}</p>
	</div>
	<div class="col-sm-8">
		<p>{{ entry.username }}</p>
	</div>
</div>
<div class="row">
	<div class="col-sm-4">
		<p class="text-sm-right show-label">{{ 'label.user.group'|trans }}</p>
	</div>
	<div class="col-sm-8">
		{% if entry.group %}
			<div class="row">
				<div class="col-xs-6">
					<p>{{ entry.group.name }}</p>
				</div>
				<div class="col-xs-6">
					<a class="btn btn-danger" href="{{ path(mainPath ~ '_remove', { id: entry.id }) }}">
						<span class="fa fa-minus"></span>				
						{{ 'action.user.remove_from_group'|trans }}
					</a>
				</div>
			</div>
		{% else %}
			<div class="row">
				<div class="col-xs-6">
					<p class="text-danger">
						{{ 'text.user.no_group'|trans }}
					</p>
				</div>
				<div class="col-xs-6">
					<a class="btn btn-success" href="{{ path('site_group_request_new') }}">
						{{ 'action.user.request'|trans }}
					</a>
				</div>
			</div>
		{% endif %}
	</div>
</div>
<div class="row">
	<div class="col-sm-4">
		<p class="text-sm-right show-label">{{ 'label.user.roles'|trans }}</p>
	</div>
	<div class="col-sm-8">
		<ul>
		{% for role in entry.roles %}
			<li>{{ role }}</li>
		{% endfor %}
		</ul>
	</div>
</div>
{% endblock %}