{% extends 'site/simple/list.html.twig' %}

{% set mainPath = 'site_' ~ 'user' %}
{% set title = 'title.user'|trans %}

{% block actionsBlock %}
{% endblock %}

{% block mainContentTitle %}
{% if app.user.group %}
	<h2>{{ app.user.group.name }}</h2>
{% else %}
	<h2 class="text-danger">{{ 'text.user.no_group'|trans }}</h2>
{% endif %}
{% endblock %}

{% block headerMainFields1 %}
<div class="col-xs-2 col-sm-1">
	<h4 class="list-header">
		<span class="fa fa-list"></span> 
	</h4>
</div>
<div class="col-xs-4 col-sm-3">
	<h4 class="list-header">
		<span class="fa fa-tag"></span> {{ 'label.name'|trans }}
	</h4>
</div>
{% endblock %}

{% block headerMoreFields2 %}
<div class="col-xs-4 col-sm-4">
	<h4 class="list-header">
		<span class="fa fa-envelope-o"></span> {{ 'label.user.email'|trans }}
	</h4>
</div>
<div class="hidden-xs col-sm-4">
	<h4 class="list-header">
		<span class="fa fa-play-circle-o"></span> {{ 'label.actions'|trans }}
	</h4>
</div>
{% endblock %}
	
{% block entryMainFields1 %}
<div class="col-xs-2 col-sm-1">{{ loop.index }}</div>

<div class="col-xs-4 col-sm-3">
	<a href="{{ path(mainPath ~ '_show', { id: entry.id } ) }}">{{ entry.username }} </a>
</div>
{% endblock %}

{% block entryMoreFields2 %}
<div class="col-xs-4 col-sm-4">{{ entry.email }}</div>

<div class="col-xs-6 col-xs-offset-6 col-sm-4 col-sm-offset-0">
	<a class="btn btn-danger" href="{{ path(mainPath ~ '_remove', { id: entry.id }) }}">
		<span class="fa fa-minus"></span> 
		{{ 'action.user.remove_from_group'|trans }}
	</a>
</div>
{% endblock %}