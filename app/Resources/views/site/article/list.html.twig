{% extends 'site/simple/list.html.twig' %}

{% set mainPath = 'site_' ~ 'article' %}
{% set title = 'title.articles'|trans %}

{% block entryMainFields1 %}
	<h3 class="col-xs-12">
		<a href="{{ path(mainPath ~ '_show', { id: entry.id }) }}">
			{{ entry.name }}
		</a>
	</h3>
	
	<div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
		<img alt="{{ entry.name }}" src="{{ asset(entry.getImagePath()) }}" width="160" height="160" />
	</div>
{% endblock %}

{% block entryMoreFields2 %}
	<div class="col-xs-12 col-sm-8 col-md-9 col-lg-10">
		<p>{{ entry.content }}</p>
	</div>
	
	<div class="col-xs-12 col-sm-8 col-md-9 col-lg-10">
		<a href="{{ path(mainPath ~ '_show', { id: entry.id }) }}" class="btn btn-primary">
			{{ 'label.readMore'|trans }}
		</a>
	</div>
{% endblock %}