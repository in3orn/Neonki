{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	
	{% block navigationBar %}
		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				
				{% block navigationHeader %}
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" 
								data-toggle="collapse" 
								data-target="#bs-example-navbar-collapse-1" 
								aria-expanded="false">
					        <span class="sr-only">Toggle navigation</span>
					        <span class="icon-bar"></span>
					        <span class="icon-bar"></span>
					        <span class="icon-bar"></span>
				      	</button>
						<a class="navbar-brand" href="{{ path('site') }}">
							<img alt="Brand" src="{{ asset('/img/logo.png') }}" height="25">
						</a>
			    	</div>
		    	{% endblock %}
		    	
		    	{% block navigationList %}
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      			<ul class="nav navbar-nav navbar-right">
							<li {% if mainPath == 'site_article' %} class="active" {% endif %}>
								<a href="{{ path('site_article') }}">
									<span class="fa fa-comments-o"></span> {{ 'title.articles'|trans }}
								</a>
							</li>
							<li {% if mainPath == 'site_eucharist' %} class="active" {% endif %}>
								<a href="{{ path('site_eucharist') }}">
									<span class="fa fa-trophy"></span> {{ 'title.eucharists'|trans }}
								</a>
							</li>
							<li {% if mainPath == 'site_liturgy' %} class="active" {% endif %}>
								<a href="{{ path('site_liturgy') }}">
									<span class="fa fa-quote-right"></span> {{ 'title.liturgies'|trans }}
								</a>
							</li>
							<li {% if mainPath == 'site_subject' %} class="active" {% endif %}>
								<a href="{{ path('site_subject') }}">
									<span class="fa fa-book"></span> {{ 'title.subjects'|trans }}
								</a>
							</li>
							<li {% if mainPath == 'site_song' %} class="active" {% endif %}>
								<a href="{{ path('site_song') }}">
									<span class="fa fa-music"></span> {{ 'title.songs'|trans }}
								</a>
							</li>
							<li {% if mainPath == 'site_user' %} class="active" {% endif %}>
								<a href="{{ path('site') }}">
									<span class="fa fa-user"></span> {{ 'title.user'|trans }}
								</a>
							</li>
						</ul>
					</div>
				{% endblock %}
		  	</div>
		</nav>
	{% endblock %}
		
	<div class="content">
	{% block content %}
		<div class="container">
			<div class="row">
				<div class="col-sm-3 col-sm-push-9">
				{% block sidebar %}
					{% block userContent %}
						{% if is_granted('ROLE_USER') %}
							<p class="text-right">
								{{ 'label.welcome'|trans }} <strong>{{ app.user.username }}</strong>, 
								<a href="{{ path('fos_user_security_logout') }}">{{ 'label.logout'|trans }}</a>
							</p>
							<p class="text-right">
								<a href="{{ path('site_user_show') }}">{{ 'label.profile'|trans }}</a>
							</p>
						{% endif %}
					{% endblock %}
					
					{% block sidebarContent %}
					{% endblock %}
				{% endblock %}
				</div>
				
				<div class="col-sm-9 col-sm-pull-3">
				{% block mainContent %}
				{% endblock %}
				</div>
			</div>
		</div>
	{% endblock %}
	</div>
	
	{% block footer %}
		<div class="footer">
	  		<div class="container-fluid">
		    	<div class="col-lg-12">
		      		<p>&copy; 2016 KRK Developement</p>
		      		<div class="social-media">
	        			<a href="#"><i class="fa fa-facebook"></i></a>
		        		<a href="#"><i class="fa fa-twitter"></i></a>
		        		<a href="#"><i class="fa fa-pinterest"></i></a>
		        		<a href="#"><i class="fa fa-instagram"></i></a>
		      		</div>
		    	</div>
		  	</div>
		</div>
	{% endblock %}
{% endblock %}
