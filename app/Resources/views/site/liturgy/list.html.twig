{% extends 'site/simple/list.html.twig' %}

{% set mainPath = 'site_' ~ 'liturgy' %}
{% set title = 'title.liturgies'|trans %}

{% block mainContentTitle %}
{% endblock %}

{% block headerMainFields1 %}
<div class="col-xs-2 col-sm-1">
	<h4 class="list-header">
		<span class="fa fa-list"></span> 
	</h4>
</div>
<div class="col-xs-6 col-sm-2">
	<h4 class="list-header">
		<span class="fa fa-tag"></span> {{ 'label.name'|trans }}
	</h4>
</div>
{% endblock %}

{% block headerMoreFields2 %}
<div class="col-xs-4 col-sm-2">
	<h4 class="list-header">
		<span class="fa fa-calendar"></span> 
		{{ 'label.liturgy.date'|trans }}
	</h4> 
</div>

<div class="row hidden-xs col-sm-7">
	<h4 class="list-header">
		<span class="fa fa-book"></span> 
		{{ 'label.liturgy.sigla'|trans }}
	</h4>
</div>
{% endblock %}

{% block entryMainFields1 %}
<div class="col-xs-2 col-sm-1">{{ loop.index }}</div>
	
<div class="col-xs-6 col-sm-2">
	<a href="{{ path(mainPath ~ '_show', { id: entry.id }) }}">{{ entry.name }} </a>
</div>
{% endblock %}

{% block entryMoreFields2 %}
<div class="col-xs-4 col-sm-2">{{ entry.date|date("d.m.Y") }} </div>

<div class="hidden-xs col-sm-7">
	<div class="col-xs-3">{{ entry.siglum1st }} </div>
	<div class="col-xs-3">{{ entry.siglum2nd }} </div>
	<div class="col-xs-3">{{ entry.siglum3rd }} </div>
	<div class="col-xs-3">{{ entry.siglumGos }} </div>
</div>
{% endblock %}