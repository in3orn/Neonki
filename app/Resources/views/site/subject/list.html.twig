{% extends 'site/simple/list.html.twig' %}

{% set mainPath = 'site_' ~ 'subject' %}
{% set title = 'title.subjects'|trans %}

{% block entryMoreFields2 %}
	<div class="col-xs-4 col-sm-4">
		{% if entry.liturgies.count > 0 %}
			<a href="{{ path('site_liturgy_show', { id: entry.liturgies.get(0).id }) }}">{{ entry.liturgies.get(0).date|date("Y-m-d") }} </a>
		{% else %}
			-
		{% endif %}
	</div>
	<div class="hidden-xs col-sm-4">
		{% if entry.liturgies.count > 1 %}
			<a href="{{ path('site_liturgy_show', { id: entry.liturgies.get(1).id }) }}">{{ entry.liturgies.get(1).date|date("Y-m-d") }} </a>
		{% else %}
			-
		{% endif %}
	</div>
{% endblock %}